h3 Homework

.row
  .col-xs-6
    .form-group
      label(for='name') Name
      input.form-control(type='text' name='name' ng-model='assignment.name')
    .form-group
      label(for='desc') Description
      input.form-control(type='text' name='desc' ng-model='assignment.desc')
  .col-xs-6
    .form-group
      label(for='due') Due Date
      input.form-control(type='date' name='due' ng-model='assignment.dueDate')
    .form-group
      label(for='category') Category
      input.form-control(type='text' name='category' ng-model='assignment.category')
.row
  .col-xs-12
    button.form-control.btn.btn-success(ng-click='addAssignment(assignment)') Add Assignment
